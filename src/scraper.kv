#:kivy 2.3.0

<ScraperGUI>:
    canvas.before:
        Color:
            rgba: 1/8, 1/8, 1/8, 1
        Rectangle:
            id: background
            pos: self.pos
            size: self.size


    Label:
        font_size: 36  
        center_x:root.width/2
        top: root.top * 0.9
        text: "Automated KB Deletion"

    Label:
        id: username_label
        font_size: 24
        center_x: root.width/20 + self.width/2
        top: root.top * 3/4
        text: "Username:"
    TextInput:
        id: username_input
        width: 200
        center_x: root.width/3 + self.width/2
        top: root.top * 0.7075
        height: 36
        hint_text: "Carleton username"
    
    Label: 
        id: password_label
        font_size: 24
        center_x: root.width/20 + self.width/2
        top: root.top * 0.69
        text: "Password:"
    TextInput:
        id: password_input
        width: 200
        center_x: root.width/3 + self.width/2
        top: root.top * 0.6475
        height: 36
        hint_text: "password"
        password: True

    Label:
        id: csv_label
        font_size: 24
        center_x: root.width/20 + self.width/2
        top: root.top * 0.6
        text: "CSV path:"
    TextInput:
        id: csv_input
        width: 200
        center_x: root.width/3 + self.width/2
        top: root.top * 0.5525
        height: 36
        hint_text: "C:\...\example.csv"

    Button:
        id: execute
        text: "Execute"
        height: 48
        width: 121
        center_x: root.width/20 + self.width/2
        top: root.top * 0.43
        background_color: 0.5, 0.2, 0.2, 1
        on_press: self.background_color = (2, 0, 0, 1)
        on_release: 
            self.background_color = (0.5, 0.2, 0.2, 1)
            root.execute()
    Label:
        id: help
        markup: True
        font_size: 18
        text: "[i](or drop a CSV file on this window)[/i]"
        center_x: root.ids.csv_input.center_x + (self.width/3)
        top: root.top * 0.55 

    CheckBox:
        id: headless
        top: root.top * 0.35
        
        Label:
            text: "Headless Mode (no visuals)"
            center_x: root.width/5 + self.width * 0.9
            top: root.ids.headless.y + root.ids.headless.height

    Label:
        id: errors
        color: 1, 0.5, 0.5, 1
        center_x: root.width/5 + self.width/2
        top: root.top * 0.25
        text: ""